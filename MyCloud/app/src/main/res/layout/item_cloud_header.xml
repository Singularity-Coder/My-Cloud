<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/gradient_header"
    android:elevation="0dp">

    <ImageView
        android:id="@+id/img_todays_task"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_cloud_queue_24"
        app:layout_constraintBottom_toTopOf="@+id/tv_todays_task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_100" />

    <TextView
        android:id="@+id/tv_todays_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="My Storage (GB)"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textColor="@color/purple_100"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_todays_task_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_todays_task" />

    <TextView
        android:id="@+id/tv_todays_task_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/purple_400"
        android:textSize="48sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_todays_task" />

</androidx.constraintlayout.widget.ConstraintLayout>